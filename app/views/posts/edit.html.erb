<%# 投稿編集ページ %>
<%= form_with model: @post, url: post_path do |f| %>
    <%= f.text_area :content %>
    <%= f.submit value = "投稿を保存する"%>
<% end %>

<% @post.errors.full_messages.each do |message|%> %>
    <%= message %>
<% end %>

