<!DOCTYPE html>
<%# ここに記述した内容は全てのviewに適用される %>
<html>
  <head>
    <title>Connect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>

    <header>
      <%= render "shared/header"%>
    </header>

    <%= yield %>

    <footer>
      <%= render "shared/footer"%>
    </footer>

  </body>



</html>
